<%= form_tag (sessions_path, :class => 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="form-group">
    <%= submit_tag "Log In" %>
  </div>

<% end %>
